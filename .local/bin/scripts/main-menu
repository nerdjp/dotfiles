#!/bin/sh

options="Launch Apps\n\
Mount Android Phone\n\
Mount USB device\n\
Unmount Android Phone\n\
Unmount USB device\n\
Lock Screen\n\
Logout\n\
Restart\n\
Poweroff"

option=$(echo -e $options | rofi -dmenu -i -p "Menu:")

case "$option" in
	
	"Launch Apps")
		rofi -show drun
		;;
	"Mount Android Phone")
		aft-mtp-mount ~/mount/phone
		;;
	"Mount USB device")
		mount-script mount
		;;
	"Unmount Android Phone")
		umount ~/mount/phone
		;;
	"Unmount USB device")
		mount-script unmount
		;;
	"Lock Screen")
		dm-tool lock
		;;
	"Logout")
		i3-msg exit
		;;
	"Restart")
		reboot
		;;
	"Poweroff")
		poweroff
		;;
	*)
		;;
esac
