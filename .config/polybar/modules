[module/powermenu]
type = custom/menu

expand-right = false

;format-background = ${colors.primary}

;format-spacing = 1

label-open = ⏻
label-open-foreground = ${colors.foreground}
label-open-background = ${colors.primary}
label-open-padding = 2

label-close = " ⏻"
label-close-foreground = ${colors.secondary}
label-close-background = ${colors.background}
label-close-padding = 2

label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = " logout "
menu-0-0-exec = #powermenu.open.1
menu-0-1 = " reboot "
menu-0-1-exec = #powermenu.open.2
menu-0-2 = " power off "
menu-0-2-exec = #powermenu.open.3

menu-1-0 = " logout "
menu-1-0-exec = logout
menu-1-1 = " cancel "
menu-1-1-exec = #powermenu.open.0

menu-2-0 = " cancel "
menu-2-0-exec = #powermenu.open.0
menu-2-1 = " reboot "
menu-2-1-exec = systemctl reboot

menu-3-0 = " power off "
menu-3-0-exec = systemctl poweroff
menu-3-1 = " cancel "
menu-3-1-exec = #powermenu.open.0

