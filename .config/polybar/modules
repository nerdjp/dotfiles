[module/i3-workspaces]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
pin-workspaces = false
reverse-scroll = false

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-padding = 1
label-focused-foreground = ${colors.accent}

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-foreground = ${colors.foreground}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-unfocused}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}

label-mode = %mode%

;========================================================================

[module/player]
type = custom/script
;interval = 5
tail = true
format-prefix = " "
label = %output:0:30:...%
exec = playerctl --player=spotifyd,firefox metadata --format "{{ title }} - {{ artist }}"
click-left = playerctl --player=spotifyd play-pause
scroll-up = playerctl --player=spotifyd next
scroll-down = playerctl --player=spotifyd previous

;========================================================================

[module/packages]
type = custom/script
interval = 21600
format-prefix = " "
exec-if = ping -c 1 archlinux.org
exec = checkupdates | wc -l

;========================================================================

;[module/rss]
;type = custom/script
;interval = 3600
;format-prefix = " "
;exec-if = ping -c 1 archlinux.org
;exec = newsboat -c ${HOME}/.config/newsboat/cache.db -x reload print-unread | cut -d' ' -f1
;click-left = kitty newsboat&
;click-right = echo "勒" %counter%

[module/rss]
type = custom/ipc
format-prefix = " "
;exec-if = ping -c 1 archlinux.org
hook-0 = newsboat -c ${HOME}/.config/newsboat/cache.db -x print-unread | cut -d' ' -f1
initial = 1
click-left = kitty newsboat&
click-right = polybar-msg -p %pid% hook rss 1

;========================================================================

[module/torrents]
type = custom/script
